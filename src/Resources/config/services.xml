<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
    <service id="app.sylius_payment" class="Payum\Core\Bridge\Symfony\Builder\GatewayFactoryBuilder">
    <argument>Srkits\SyliusRazorPayPlugin\Payum\SyliusPaymentGatewayFactory</argument>
    <tag name="payum.gateway_factory_builder" factory="sylius_payment" />
</service>
<service id="Srkits\SyliusRazorPayPlugin\Form\Type\SyliusGatewayConfigurationType">
    <tag name="sylius.gateway_configuration_type" type="sylius_payment" label="Razor Pay" />
    <tag name="form.type" />
</service>
<service id="Srkits\SyliusRazorPayPlugin\Payum\Action\CaptureAction" public="true">
    <argument type="service" id="sylius.http_client" />
    <tag name="payum.action" factory="sylius_payment" alias="payum.action.capture" />
</service>
        <!-- Put your services here -->
    </services>
</container>
